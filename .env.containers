# AI-Powered Extraction v3 - Container Stack Configuration
# This configuration is used when running the full container stack

# Deployment Mode
SETUP_MODE=containers

# ChromaDB Configuration (Container)
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_TENANT=default_tenant
CHROMA_DATABASE=default_database

# MongoDB Configuration (Container)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=rpger
MONGODB_USERNAME=root
MONGODB_PASSWORD=extractor123

# AI Configuration
# Uncomment and set the API key for your chosen provider
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# OPENAI_API_KEY=sk-your-key-here
# OPENROUTER_API_KEY=sk-or-your-key-here
# LOCAL_LLM_URL=http://localhost:11434
# LOCAL_LLM_MODEL=llama2

# AI Behavior Settings
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4000
AI_TIMEOUT=30
AI_RETRIES=3
AI_DEBUG=false
AI_CACHE=true

# Default AI Provider
DEFAULT_AI_PROVIDER=mock
DEFAULT_AI_MODEL=mock

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false