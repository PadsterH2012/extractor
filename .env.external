# AI-Powered Extraction v3 - External Databases Configuration
# This configuration is used when connecting to external database services

# Deployment Mode
SETUP_MODE=external

# External ChromaDB Configuration
# Replace with your external ChromaDB instance details
EXTERNAL_CHROMA_HOST=your-chromadb-host.com
EXTERNAL_CHROMA_PORT=8000
# Or use full URL override:
# EXTERNAL_CHROMA_BASE_URL=https://your-chromadb-instance.com/api/v1

CHROMA_TENANT=default_tenant
CHROMA_DATABASE=default_database

# External MongoDB Configuration
# Replace with your MongoDB Atlas or external MongoDB details
EXTERNAL_MONGODB_HOST=your-mongodb-host.com
EXTERNAL_MONGODB_PORT=27017
EXTERNAL_MONGODB_DATABASE=rpger
EXTERNAL_MONGODB_USERNAME=your_username
EXTERNAL_MONGODB_PASSWORD=your_password
# Or use connection string override:
# EXTERNAL_MONGODB_CONNECTION_STRING=mongodb+srv://user:pass@cluster.mongodb.net/rpger

# AI Configuration
# Uncomment and set the API key for your chosen provider
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# OPENAI_API_KEY=sk-your-key-here
# OPENROUTER_API_KEY=sk-or-your-key-here
# LOCAL_LLM_URL=http://localhost:11434
# LOCAL_LLM_MODEL=llama2

# AI Behavior Settings
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=4000
AI_TIMEOUT=30
AI_RETRIES=3
AI_DEBUG=false
AI_CACHE=true

# Default AI Provider
DEFAULT_AI_PROVIDER=mock
DEFAULT_AI_MODEL=mock

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false